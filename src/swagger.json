{
    "openapi": "3.0.0",
    "info": {
        "title": "User Registration Documentation",
        "description": "This is an user registration API",
        "version": "1.0.2",
        "contact": {
            "email": "mbandeira.cs@gmail.com"
        }
    },
    "paths": {
        "/users": {
            "post": {
                "tag": [
                    "Users"
                ],
                "summary": "Register an user",
                "description": "Register a new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "nome",
                                    "email": "nome@email.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User registered"
                    },
                    "400": {
                        "description": "User already exists"
                    }
                }
            },
            "get": {
                "tag": [
                    "Users"
                ],
                "parameters": [
                    {
                        "name": "user_id",
                        "description": "User Id",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "summary": "List all users",
                "description": "List all users, user must be an admin",
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "User does not exist"
                    },
                    "403": {
                        "description": "User is not an admin"
                    }
                }
            }
        },
        "/users/{user.id}": {
            "get": {
                "tag": [
                    "Users"
                ],
                "parameters": [
                    {
                        "IdParamHeader": {
                            "name": "user_id",
                            "in": "routes",
                            "description": "User Id",
                            "required": true,
                            "schema": {
                                "type": "string",
                                "format": "uuid"
                            }
                        }
                    }
                ],
                "summary": "Get informations of user",
                "description": "Get informations of user specified in routes",
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "User does not exist"
                    }
                }
            }
        },
        "/users/{user_id}/admin": {
            "patch": {
                "tag": [
                    "Users"
                ],
                "parameters": [
                    {
                        "IdParamHeader": {
                            "name": "user_id",
                            "in": "routes",
                            "description": "User Id",
                            "required": true,
                            "schema": {
                                "type": "string",
                                "format": "uuid"
                            }
                        }
                    }
                ],
                "summary": "Turn user into admin",
                "description": "Turn user into admin",
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "404": {
                        "description": "User does not exist"
                    }
                }
            }
        }
    }
}